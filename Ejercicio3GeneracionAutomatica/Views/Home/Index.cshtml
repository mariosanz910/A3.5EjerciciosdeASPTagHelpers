@model List<Ejercicio3GeneracionAutomatica.Models.Movie>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Ejercicio 3</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<!-- Botón para ir al formulario Create -->
<a asp-controller="Home" asp-action="Create" class="btn btn-primary mt-3">
    Crear Nueva Película
</a>

@if (Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Fecha de Lanzamiento</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.ID</td>
                    <td>@movie.Title</td>
                    <td>@movie.ReleaseDate.ToShortDateString()</td>
                    <td>@movie.Price</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay películas guardadas.</p>
}
